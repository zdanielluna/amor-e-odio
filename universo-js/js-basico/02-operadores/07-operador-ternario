/* Atribui valor a uma variável, de acordo com o valor da expressão lógica.
   O Operador Ternário é representado por (?). */

let infinito = 10 / 0 === Infinity ? "É infinito" : "Não é infinito";
console.log(infinito)

let idade = 18
let maiorIdade = idade >= 18 ? "Maior de idade" : "Menor de idade"
console.log(maiorIdade)
